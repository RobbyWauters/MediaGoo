*
	margin 0
	padding 0
	list-style none
	text-decoration none
	// font-family 'Alegreya SC', serif
	font-family 'Roboto', sans-serif
	-webkit-box-sizing border-box // Safari/Chrome, other WebKit
	-moz-box-sizing border-box    // Firefox, other Gecko
	box-sizing border-box         // Opera/IE 8+
	position relative // lost veel frustraties op :-)

html, body
	width 100%
	height 100%
	font-size 16px

body
	background-color #FFF
	position relative
	color #000

a
	color inherit
	margin inherit

.link
	text-decoration underline
.link:hover
	text-decoration none

.title
	font-size 20px
	width 100%
	text-align center
	top 20px

.camwrapper
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	margin auto
	width 64px
	height 64px

	img, .fileinput
		position absolute
		left 0px
		top 0px
		width 100%
		height 100%

	.fileinput
		opacity 0
		cursor pointer

.uploadcomplete
	position absolute
	bottom 10px
	width 100%
	text-align center
	opacity 0
	-webkit-transition all 0.3s
	-moz-transition all 0.3s
	transition all 0.3s

.uploadcomplete.show
	opacity 1